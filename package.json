{
  "name": "yandex-maps-monitor-bot",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p .",
    "run:once": "tsx src/index.ts --once",
    "fetch:changes": "npm run build && node dist/fetch-changes.js",
    "check:recent": "npm run build && node dist/check-recent-changes.js",
    "analyze": "npm run build && node dist/analyze-changes.js",
    "analyze:pdf": "npm run build && node dist/analyze-changes.js --pdf ./analysis-report.pdf",
    "analyze:telegram": "npm run build && node dist/analyze-changes.js --telegram",
    "analyze:full": "npm run build && node dist/analyze-changes.js --pdf ./analysis-report.pdf --telegram",
    "monitor": "npm run build && node dist/monitor.js",
    "monitor:dry": "npm run build && node dist/monitor.js --dry-run --verbose",
    "test:telegram": "tsx src/test-telegram.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "check": "npm run format:check && npm run lint && npm run type-check",
    "prepare": "npm run build"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "fast-xml-parser": "^4.5.0",
    "geolib": "^3.3.4",
    "node-cron": "^3.0.3",
    "p-limit": "^5.0.0",
    "playwright": "^1.56.1",
    "puppeteer": "^24.35.0",
    "string-similarity": "^4.0.4",
    "telegraf": "^4.16.3",
    "xml2js": "^0.6.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
